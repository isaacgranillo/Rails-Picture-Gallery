<!DOCTYPE html>
<html>
<head>
  <title>PictureGallery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

        <%= link_to "Picture Gallery", root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% @categoryNav.each do |category| %>
            	<li><%= link_to category.name, category_path(category.id) %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to "Upload Picture", upload_path %></li>
            <li><%= link_to "Add Category", new_category_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <section>
      <div class="container">

      	<% if flash[:notice] %>
      		<div class="alert alert-success success_message"><%= flash[:notice] %></div>
      	<% end %>

      	<% if flash[:alert] %>
      		<div class="danger alert-danger fail_message"><%= flash[:alert] %></div>
      	<% end %>

      	<%= yield %>

      </div><!-- /.container -->
    </section>

    <footer>
      <p>Copyright &copy; 2015, Isaac Granillo</p>
    </footer>


</body>
</html>




